doctype HTML 
html(lang="ko-kr")
  head 
    style 
      include styles/login.css
  body 
    main
      form(method="POST" action="/login") 
        input(type="text" name="username" required maxlength="12" minlength="2")
        input(type="text" name="id" required maxlength="28")
        input(type="password" name="password" required maxlength="28")
        input(type="submit" value="Login")